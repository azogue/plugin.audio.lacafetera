<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.lacafetera"
        name="La Cafetera"
        version="0.2.0"
        provider-name="Azogue">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es_ES">Add-on para reproducir los podcasts de La Cafetera de Radiocable</summary>
    <description lang="es_ES">Este add-on lee los episodios de La Cafetera de Radiocable publicados en la plataforma spreaker.com, vía su API pública, y permite reproducirlos cómodamente en KODI.

        Que os aproveche, Resistencia!</description>
    <language>es</language>
    <disclaimer lang="es_ES">Utilízalo, modifícalo, mejóralo... como mejor gustes</disclaimer>
    <platform>all</platform>
    <license>MIT License</license>
    <source>https://github.com/azogue/plugin.audio.lacafetera</source>
    <website></website>
    <email>azogue dot lab at gmail dot com</email>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
        <screenshot>resources/screenshots/screenshot-01-play-full-screen.jpg</screenshot>
        <screenshot>resources/screenshots/screenshot-02-index.jpg</screenshot>
        <screenshot>resources/screenshots/screenshot-03-list.jpg</screenshot>
        <screenshot>resources/screenshots/screenshot-04-search-input.jpg</screenshot>
        <screenshot>resources/screenshots/screenshot-05-search-found.jpg</screenshot>
    </assets>
  </extension>
</addon>
